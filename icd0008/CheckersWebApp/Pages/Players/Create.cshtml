@page
@using Domain.Db
@model CheckersWebApp.Pages.Players.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>New player</h2>

<hr />

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Create a new player ðŸŽ®</h5>
            </div>
            <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="card-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="Player.PlayerName" class="control-label mb-1">Name</label>
                            <input asp-for="Player.PlayerName" class="form-control" />
                            <span asp-validation-for="Player.PlayerName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="Player.PlayerType" class="control-label mb-1">Type</label>
                            <select asp-for="Player.PlayerType" asp-items="Html.GetEnumSelectList<EPlayerType>()" class="form-control"></select>
                            <span asp-validation-for="Player.PlayerType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer text-end">
                    <div class="form-group text-end">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                    <div class="mt-2">
                        <a asp-page="Index" class="btn btn-dark">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
