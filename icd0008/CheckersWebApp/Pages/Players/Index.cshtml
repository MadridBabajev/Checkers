@page
@model CheckersWebApp.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Players</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-dark">Create New Player ðŸŽ®</a>
</p>

<table class="table table-striped table-hover players-table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Player) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerType)
            </td>
            <td>
                <div class="d-flex flex-row text-center">
                    <div class="p-1">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                    </div>
                    <div class="p-1">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                    </div>
                    <div class="p-1">
                        <form method="post" asp-route-id="@item.Id.ToString()"
                              onclick="return confirm('Are you sure you want to delete this player?')">
                            <button type="submit" class="btn btn-danger mr-5"><i class="fas fa-trash-alt text-white"></i>Delete</button>
                        </form>
                    </div>
                </div>
            </td>
            
        </tr>
}
    </tbody>
</table>
