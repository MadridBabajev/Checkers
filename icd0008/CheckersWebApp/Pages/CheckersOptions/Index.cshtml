@page
@model CheckersWebApp.Pages.CheckersOptions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Options</h1>

<p class="mt-2">
    <a class="btn btn-outline-dark" asp-page="Create">Create New Options âš™</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Create Date
            </th>
            <th>
                Width
            </th>
            <th>
                Height
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CheckersOptions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.BoardWidth)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.BoardHeight)
            </td>
            <td>
                <div class="d-flex flex-row text-center">
                    <div class="p-1">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                    </div>
                    <div class="p-1">
                        <form method="post" asp-route-id="@item.Id.ToString()"
                              onclick="return confirm('Are you sure you want to delete this option?')">
                            <button type="submit" class="btn btn-danger mr-5"><i class="fas fa-trash-alt text-white"></i>Delete</button>
                        </form>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
