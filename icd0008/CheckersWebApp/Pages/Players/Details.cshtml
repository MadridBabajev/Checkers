@page
@model CheckersWebApp.Pages.Players.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Player ðŸŽ®</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.PlayerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.PlayerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.PlayerType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.PlayerType)
        </dd>
    </dl>
    
    <table class="table mt-1 table-striped table-hover">
    <thead>
        <tr>
            <th>
                StartedAt
            </th>
            <th>
                GameOverAt
            </th>
            <th>
                GameType
            </th>
            <th>
                GamePlayer1
            </th>
            <th>
                GamePlayer2
            </th>
            <th>
                CheckersOptions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GetGamesByDate()) {
            <tr>
                <th>
                    Started at
                </th>
                <th>
                    Over at
                </th>
                <th>
                    Game Type
                </th>
                <th>
                    Player 1
                </th>
                <th>
                    Player 2
                </th>
                <th>
                    Options
                </th>
                <th></th>
                <td>
                    <div class="d-flex flex-row text-center">
                        <div class="p-1">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                        </div>
                        <div class="p-1">
                            <form method="post" asp-route-id="@item.Id.ToString()"
                                  onclick="return confirm('Are you sure you want to delete this game?')">
                                <button type="submit" class="btn btn-danger mr-5"><i class="fas fa-trash-alt text-white"></i>Delete</button>
                            </form>
                        </div>
                    </div>
                </td>

            </tr>
    }
        </tbody>
    </table>
    
    <div class="text-end">
        <a asp-page="./Index" class="btn btn-dark">Back to List</a>
    </div>
</div>
